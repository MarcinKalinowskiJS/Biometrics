<Window x:Class="WpfApplication1.OriginalImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Original_image" Height="768" Width="1024">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image Stretch="None" x:Name="imgPhotoOriginal" Margin="0,0,0,0" UseLayoutRounding="True" SnapsToDevicePixels="True" x:FieldModifier="public"/>
        </ScrollViewer>
    </Grid>
</Window>
